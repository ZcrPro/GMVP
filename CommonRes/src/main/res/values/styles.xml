<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--BaseDialog样式-->
    <style name="AppBaseDialogStyle" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item><!--无标题-->
    </style>
    <style name="AppBaseDialogStyle.NoAnim" parent="AppBaseDialogStyle">
        <item name="android:backgroundDimEnabled">false</item>
        <!--将默认window动画取消，自行实现。-->
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>
    <!--BaseBottomDialog动画样式-->
    <style name="BaseDialogBottomSlideAnim">
        <item name="android:windowEnterAnimation">@anim/base_dialog_content_bottom_slide_in_anim</item>
        <item name="android:windowExitAnimation">@anim/base_dialog_content_bottom_slide_out_anim</item>
    </style>
    <!--CommonButtonStyle通用按钮基本样式-->
    <style name="CommonButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/widget_size_45</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:gravity">center</item>
    </style>
    <!--CommonButtonStyle.Blue 蓝色通用按钮样式-->
    <style name="CommonButtonStyle.Blue" parent="CommonButtonStyle">
        <item name="android:background">@drawable/bt_common_blue</item>
    </style>
    <!--CommonButtonStyle.Green 绿色通用按钮样式-->
    <style name="CommonButtonStyle.Green" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bt_common_green</item>
    </style>
    <!--CommonButtonStyle.Gray 灰色通用按钮样式-->
    <style name="CommonButtonStyle.Gray" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bt_common_gray</item>
    </style>
    <style name="DividerHorizontalStyle">
        <item name="android:background">@color/axf_common_divider</item>
        <item name="android:layout_height">@dimen/widget_min_size_1</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="DividerVerticalStyle">
        <item name="android:background">@color/axf_common_divider</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/widget_min_size_1</item>
    </style>
</resources>