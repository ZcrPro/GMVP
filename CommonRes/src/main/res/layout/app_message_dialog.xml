<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="@dimen/widget_size_300"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_white_corner_rect"
        android:orientation="vertical"
        android:paddingBottom="@dimen/widget_size_15">

        <ImageView
            android:id="@+id/app_message_dialog_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/widget_size_10"
            android:src="@mipmap/wrong_icon" />

        <TextView
            android:id="@+id/app_message_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/widget_size_15"
            android:layout_marginRight="@dimen/widget_size_15"
            android:layout_marginBottom="@dimen/widget_size_15"
            android:gravity="center"
            android:text="This is message content"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_40"
            android:layout_marginLeft="@dimen/widget_size_10"
            android:layout_marginRight="@dimen/widget_size_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/app_message_dialog_btn_negative"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/widget_size_5"
                android:layout_marginRight="@dimen/widget_size_5"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="@dimen/font_size_16"
                android:autoSizeTextType="uniform"
                android:background="@drawable/bt_common_gray"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="@dimen/widget_size_5"
                android:paddingRight="@dimen/widget_size_5"
                android:text="negative"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_16"
                android:visibility="visible" />

            <TextView
                android:id="@+id/app_message_dialog_btn_neutral"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/widget_size_5"
                android:layout_marginRight="@dimen/widget_size_5"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="@dimen/font_size_16"
                android:autoSizeTextType="uniform"
                android:background="@drawable/bt_common_green"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="@dimen/widget_size_5"
                android:paddingRight="@dimen/widget_size_5"
                android:text="neutral"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_16"
                android:visibility="visible" />

            <TextView
                android:id="@+id/app_message_dialog_btn_positive"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/widget_size_5"
                android:layout_marginRight="@dimen/widget_size_5"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="@dimen/font_size_16"
                android:autoSizeTextType="uniform"
                android:background="@drawable/bt_common_blue"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="@dimen/widget_size_5"
                android:paddingRight="@dimen/widget_size_5"
                android:text="positive"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_16"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>